<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_browse_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity12"
    android:background="#DEF8F8"
    tools:ignore="MergeRootFrame">

    <TextView
        android:id="@+id/backwardArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="&#x2190;"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="#157177"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/addText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backwardArrow"
        android:layout_marginStart="25dp"
        android:layout_marginTop="120dp"
        android:text="Add New Mentor"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#157177" />

    <TextView
        android:id="@+id/helpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addText"
        android:layout_marginStart="95dp"
        android:layout_marginTop="160dp"
        android:text="Help us expand!"
        android:textSize="22dp"
        android:textColor="#157177" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/helpText"
        android:layout_marginTop="230dp"
        android:background="#50C2C9" />

    <ImageView
        android:id="@+id/uploadVideoImageView"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:layout_below="@id/helpText"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/uploadvideo" />

    <ImageView
        android:id="@+id/uploadphotoImageView"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:layout_below="@id/helpText"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="230dp"
        android:scaleType="fitCenter"
        android:src="@drawable/photo" />

    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/uploadVideoImageView"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="30dp"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#FAF7F7" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameLabel"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="355dp"
        android:background="#FFFFFF"
        android:hint="Enter Name"
        android:padding="12dp"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/descriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameEditText"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="30dp"
        android:text="Description"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#FAF7F7" />

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionLabel"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="435dp"
        android:background="#FFFFFF"
        android:hint="Enter Description"
        android:padding="12dp"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/statusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionEditText"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="30dp"
        android:text="Status"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#FAF7F7" />

    <EditText
        android:id="@+id/statusEditText"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusLabel"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="515dp"
        android:background="#FFFFFF"
        android:hint="Available"
        android:padding="12dp"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/designationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionEditText"
        android:layout_marginTop="570dp"
        android:layout_marginLeft="30dp"
        android:text="Designation"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#FAF7F7" />


    <EditText
        android:id="@+id/designationEditText"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusLabel"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="590dp"
        android:background="#FFFFFF"
        android:hint="Available"
        android:padding="12dp"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/priceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionEditText"
        android:layout_marginTop="640dp"
        android:layout_marginLeft="30dp"
        android:text="Price"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#FAF7F7" />

    <EditText
        android:id="@+id/priceEditText"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusLabel"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="660dp"
        android:background="#FFFFFF"
        android:hint="Available"
        android:padding="12dp"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusEditText"
        android:layout_marginTop="720dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#157177"
        android:text="Upload"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/plusImage"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/plus" />

</FrameLayout>
