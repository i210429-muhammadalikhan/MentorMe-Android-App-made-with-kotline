<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_browse_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4"
    android:background="#DEF8F8"
    tools:ignore="MergeRootFrame">

    <TextView
        android:id="@+id/backwardArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:text="&#x2190;"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#157177"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/verifyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="60dp"
        android:text="Verify your phone number"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#157177" />

    <TextView
        android:id="@+id/sentmsgText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="110dp"
        android:text="Weâ€™ve sent a code to +92 321 2242022"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#090909" />

    <ImageView
        android:id="@+id/circlepic4"
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:layout_below="@id/helpText"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/circlepic4" />

    <Button
        android:id="@+id/verifyButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/circlepic4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="100dp"
        android:text="Verify"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#157177"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/sentcodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="290dp"
        android:text="Send code again 00:20"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#157177" />


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logoImageView"
        android:layout_marginTop="340dp"
        android:background="#50C2C9" />

    <ImageView
        android:id="@+id/calculaterpic4"
        android:layout_width="390dp"
        android:layout_height="350dp"
        android:layout_below="@id/helpText"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="410dp"
        android:scaleType="fitCenter"
        android:src="@drawable/calculaterpic4" />


</FrameLayout>
