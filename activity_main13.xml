<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_browse_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity13"
    android:background="#DEF8F8"
    tools:ignore="MergeRootFrame">

    <View
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#50C2C9" />

    <TextView
        android:id="@+id/backwardArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:text="&#x2190;"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#157177"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/addText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:text="Book Your Session"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#157177" />

    <Button
        android:id="@+id/bookappointmentButton"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="30dp"
        android:padding="10dp"
        android:text="Book an Appointment"
        android:textSize="18sp"
        android:textColor="#F4F3F3"
        android:backgroundTint="#157177"
        android:onClick="onBookAppointmentButtonClick"/>

    <TextView
        android:id="@+id/johnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="80dp"
        android:text="John Cooper"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#F6F8F8" />

    <ImageView
        android:id="@+id/john13pic"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="60dp"
        android:layout_marginStart="280dp"
        android:scaleType="fitXY"
        android:src="@drawable/john13" />

    <TextView
        android:id="@+id/starsymbolText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="140dp"
        android:text="⭐ 4.8"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#F6F8F8" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="170dp"
        android:background="#88E2E8" />

    <TextView
        android:id="@+id/sessionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="180dp"
        android:text="$1500/Session"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFC107" />

    <ImageView
        android:id="@+id/cpv13"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="180dp"
        android:layout_marginStart="280dp"
        android:scaleType="fitXY"
        android:src="@drawable/cpv13" />


    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="380dp"
        android:layout_height="310dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="240dp"
        android:layout_marginStart="10dp" />


    <TextView
        android:id="@+id/timeslotsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="590dp"
        android:text="Available Time Slots"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#0E0E0E" />


    <ImageView
        android:id="@+id/ten"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="630dp"
        android:layout_marginStart="10dp"
        android:scaleType="fitXY"
        android:clickable="true"
        android:src="@drawable/ten13" />

    <ImageView
        android:id="@+id/eleven"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="631dp"
        android:layout_marginStart="145dp"
        android:scaleType="fitXY"
        android:clickable="true"
        android:src="@drawable/eleven13" />

    <ImageView
        android:id="@+id/twelve"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="630dp"
        android:layout_marginStart="275dp"
        android:scaleType="fitXY"
        android:clickable="true"
        android:src="@drawable/twelve13" />


</FrameLayout>
