<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_browse_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity10"
    android:background="#DEF8F8"
    tools:ignore="MergeRootFrame">

    <View
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:background="#50C2C9" />

    <TextView
        android:id="@+id/backwardArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:text="&#x2190;"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#157177"
        android:clickable="true"
        android:focusable="true" />

    <Button
        android:id="@+id/booksessionButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="30dp"
        android:padding="10dp"
        android:text="Book a Session"
        android:textSize="18sp"
        android:textColor="#F4F4F4"
        android:backgroundTint="#157177"
        android:clickable="true"
        android:onClick="onBookedSessionsButtonClick"/>

    <TextView
        android:id="@+id/johnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:text="Hi, I'm
                                        John Cooper"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#F6F8F8" />

    <ImageView
        android:id="@+id/john13pic"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="60dp"
        android:layout_marginStart="280dp"
        android:scaleType="fitXY"
        android:src="@drawable/john13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="150dp"
        android:background="#88E2E8" />

    <TextView
        android:id="@+id/UXdesignerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="160dp"
        android:text="UX Designer at
                                             Google"
        android:textSize="22sp"
        android:textColor="#F6F8F8" />

    <TextView
        android:id="@+id/starsymbolText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="310dp"
        android:layout_marginTop="170dp"
        android:text="⭐ 4.8"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#F6F8F8" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="230dp"
        android:background="#88E2E8" />

    <TextView
        android:id="@+id/aboutmeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="240dp"
        android:text="About Me"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#F6F8F8" />

    <TextView
        android:id="@+id/descripText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="265dp"
        android:text="I am a passionate UX designer at Google with a focus on
creating user-centric and intuitive interfaces. With 10 years of
experience, I have had the opportunity to work on diverse
projects that have shaped my understanding of design
principles and user experience."
        android:textSize="20sp"
        android:textColor="#F6F8F8" />

    <TextView
        android:id="@+id/expertiseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="420dp"
        android:text="My Expertise Include"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#157177" />

    <ImageView
        android:id="@+id/careerpic"
        android:layout_width="380dp"
        android:layout_height="130dp"
        android:layout_gravity="start|top"
        android:layout_marginStart="20dp"
        android:layout_marginTop="450dp"
        android:scaleType="fitXY"
        android:src="@drawable/career10" />

    <ImageView
        android:id="@+id/dropreview10"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="start|top"
        android:layout_marginStart="3dp"
        android:layout_marginTop="580dp"
        android:scaleType="fitXY"
        android:clickable="true"
        android:src="@drawable/dropreview10" />

    <ImageView
        android:id="@+id/joincommunity10"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="start|top"
        android:layout_marginStart="190dp"
        android:layout_marginTop="580dp"
        android:scaleType="fitXY"
        android:clickable="true"
        android:src="@drawable/joincommunity10" />


</FrameLayout>
